extends ../layout

block content
    title Henry's Portfolio
    // Bootstrap
    link(
        href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" 
        rel="stylesheet"
    )
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js")
    // Google Font
    link(
        href="https://fonts.googleapis.com/css?family=Unbounded" 
        rel="stylesheet"
    )
    link(
        href="https://fonts.googleapis.com/css?family=Prosto+One" 
        rel="stylesheet"
    )
    link(
        href="https://fonts.googleapis.com/css?family=Nunito" 
        rel="stylesheet"
    )
    // Icon
    link(
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" 
        rel="stylesheet"
    )
    // Style
    link(
        rel="stylesheet" 
        href="/css_stylesheets/hp.css"
    )
    nav#navigation-bar.navbar.navbar-expand-lg.navbar-light.bg-white.shadow-5-small.col-lg-12.col-md-12.col-sm-24
        .container-fluid
            a.navbar-brand(href='/index.html')
            img#homelogo(src='/img/Poseidon Symbol.png', alt='')
            button#cbutton.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                img.navbar-toggler-icon(src='https://live.staticflickr.com/1592/24255501882_c87f443835_b.jpg', alt='')
            #navbarSupportedContent.collapse.navbar-collapse
                ul#listlink.navbar-nav.me-auto.mb-2.mb-lg-0
                    li.nav-item.links
                        a.nav-link.TAGS.active(aria-current='page', href='/HenryPortfolio-public') HOME
                    li.nav-item.links.dropdown
                        a.nav-link.TAGS(href='/abp.html') ABOUT ME
    body
        .container(style='text-align: center; font-family: Prosto One;')
            .row
                #introDiv.col-lg-12.col-md-12.col-sm-12
                    h1#introQuote WELCOME TO MY PORTFOLIO WEBSITE &#x1F603;
        .container(style='margin-top: 30px; font-family: Nunito')
            .row
                #tutorialCD.col-lg-6.col-md-12.col-sm-12.mb-md-5.mb-sm-5(style='color: white;')
                    .bg-transparent
                        .card-body(style='text-align: center;')
                            h3.card-title WEBSITE INFO
                            p
                            h5.card-text(style='color: red;') STARTED BEING BUILT ON AUGUST 1st, 2023.
                            p
                            h5.card-text(style='color: crimson;') FULLY RUNNING ON .
                #tutorialCD.col-lg-6.col-md-12.col-sm-12(style='color: white;')
                    div
                        .card-body(style='text-align: center; opacity: 1px;')
                            h4.card-title WHAT CAN I DO HERE?
                            p
                            p
                            h5.card-text.leftHT(style='color: rgb(196, 234, 138);') READ MY PROFILE &#x1F4DC;
                            br
                            br
                            h5.card-text.rightHT(style='color: orangered;') USE PROVIDED UTILITIES &#x1F527;
                            br
                            br
                            h5.card-text.leftHT(style='color: rgb(111, 213, 111);') ENJOY  MUSIC &#x1F3A7;
                            br
                            br
                            h5.card-text.rightHT(style='color: rgb(179, 151, 199);') CONNECT TO ME &#x1F4DE;
                            br
                            br
                            h5.card-text.leftHT(style='color: brown;') AND MUCH MORE WILL BE ADDED SOON &#x1F633;
                .col-lg-12.col-md-12.col-sm-12.card-body.music-list-section
                    hr.sep-2
                    h5.card-title(style='color: aliceblue;') LIST OF SONGS THAT I LIKE
                    table.col-lg-12.col-md-12.col-sm-12.table-music
                        thead.music-list-section-thead
                            tr
                                th #
                                th Name Song
                                th Author
                                th Action
                        tbody.music-list-section-tbody
                            tr
                                td 1
                                td Track In Time - Piano
                                td Dennis Kuo
                                td.audioNumber(style='font-size: 2rem;', data-music-src='https://docs.google.com/uc?export=download&id=1Wijcj4e604maDCKFTl4_ZsSKRmv_lqmR') ▶️
                            tr.mt-4
                                td 2
                                td My Lovely Lady
                                td Dennis Kuo
                                td.audioNumber(style='font-size: 2rem;', data-music-src='https://docs.google.com/uc?export=download&id=193txMhwgTeF0S_2OQPIJx6YFGDmMBaX2') ▶️
                            tr.mt-4 
                                td 3
                                td Scared 
                                td Sabai 
                                td.audioNumber(style='font-size: 2rem;', data-music-src='https://docs.google.com/uc?export=download&id=1iQs0VvRKabG3USdRo9iiOI39az6rEYRw') ▶️
                    .simple-player
                        audio.audio-player(controls='')
                            source(src='https://docs.google.com/uc?export=download&id=1Wijcj4e604maDCKFTl4_ZsSKRmv_lqmR', type='audio/mp3') 
                            p Trình duyệt không hỗ trợ chức năng này.
                    script(src='javascripts/music-section.js')
                .col-lg-12.col-md-12.col-sm-12.utilities-list-section
                    hr.ult-hr(data-content='THE UTILITIES')
                    br
                    .col-lg-12.col-md-12.col-sm-12.digital-clock-section
                        h4#digitial-clock-section-title(style='color: aliceblue;') Don't know what's the time now?
                        .digital-clock-surface
                            p#hour-value(style='display: inline-block;') 00
                            p(style='display: inline-block;') :
                            p#minute-value(style='display: inline-block;') 00
                            p(style='display: inline-block;') :
                            p#second-value(style='display: inline-block;') 00
                            p#period(style='display: inline-block;') AM
                    script(src='javascripts/digital-clock.js')
